---
// Import the necessary dependencies.
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define the variables that will be used in this component
const title: string = "Contáctanos";
const subTitle: string =
  "¿Tienes preguntas? Comunícate con nosotros y diseñemos la solución perfecta con nuestras herramientas y servicios.";
const formTitle: string = "Visitanos en nuestras instalaciones";
const formSubTitle: string = "Lo contactaremos en 1-2 días hábiles.";
---

<!-- Contact Us -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="dark:text-neutral-200 text-balance text-2xl font-bold tracking-tight text-neutral-800 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="dark:text-neutral-400 mt-1 text-pretty text-neutral-600">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 text-center sm:p-6 lg:p-8">
        <h2
          class="dark:text-neutral-300 mb-8 text-xl font-bold text-neutral-700"
        >
          {formTitle}
        </h2>
        <div class="w-full">
          <div class="relative w-full max-w-7xl mx-auto overflow-hidden rounded-2xl border border-gray-300 bg-white/40 shadow-2xl backdrop-blur-sm transform transition-transform hover:scale-[1.03]">
            <div class="relative pb-[56.25%] h-0">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.904437001868!2d-77.28498882552776!3d1.2263508619614005!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e2ed479127af695%3A0xbc509c69ebeb5f2a!2sCondupasto!5e0!3m2!1ses!2sco!4v1743133085372!5m2!1ses!2sco"
                class="absolute top-0 left-0 w-full h-full border-0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
              </iframe>
            </div>
          </div>
        </div>
        
        
        
      </div>

      <!--ContactIconBlocks are used to display different methods of contacting, including visiting office, email, browsing knowledgebase, and FAQ.-->
      <div class="dark:divide-neutral-700 divide-y divide-neutral-300">
        <ContactIconBlock
          heading="Llama a nuestro equipo"
          content="Te atención es nuestra prioridad, ¡Llámanos!"
          isLinkVisible={true}
          linkTitle="Visit guides & tutorials"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="dashboard" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="PQRSF"
          content="Preguntas, quejas, reclamos, sugerencias y felicitaciones."
          isLinkVisible={false}
          isAddressVisible={false}
          addressContent="Utilice un folleto de la tablilla, Llene los datos solicitados, Depósitelos en el buzón transparente, En el mejor tiempo posible usted recibirá respuesta de parte de CONDUPASTO"
          ><Icon name="chatBubble" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Visitanos"
          content="Pasto, Nariño"
          isLinkVisible={false}
          isAddressVisible={false}
          addressContent="Calle 20 # 35-23 Av. los Estudiantes"
          ><Icon name="mapPin" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contactanos via email"
          content="contactanos@condupasto.com.co"
          isLinkVisible={false}
          linkTitle="contactanos@condupasto.com.co"
          linkURL="#"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>
